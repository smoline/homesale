<%= form_for(@home, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @home.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h4>

      <ul>
      <% @home.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="well well-lg">
      <%# Submit %>
      <div class="form-group">
        <div class="col-md-offset-10 col-md-2">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>

      <%# image %>
      <div class="form-group">
        <%= f.label :image, class: "col-md-2 control-label" %>
        <div class="col-md-2">
          <%# This is where our upload button goes! %>
          <%= f.hidden_field :image, value: @home.cached_image_data %>
          <%= f.file_field :image %>
        </div>
      </div>

      <%# address %>
      <div class="form-group">
        <%= f.label :address, class: "col-md-1 col-md-offset-1 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :address, class: "form-control", style: "width: 600px" %>
        </div>
      </div>

      <%# city, state  zip %>
      <div class="form-group form-inline">
        <%= f.label :city, class: "col-md-2 control-label" %>
        <div class="col-md-3">
          <%= f.text_field :city, class: "form-control", style: "width: 250px" %>
        </div>
        <%= f.label :state, class: "col-md-1 col-md-offset-1 control-label" %>
        <div class="col-md-1">
          <%= f.text_field :state, class: "form-control", style: "width: 70px" %>
        </div>
        <%= f.label :zip, class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.text_field :zip, class: "form-control", style: "width: 150px" %>
        </div>
      </div>

      <%# year_built, bedrooms, bathrooms, square_footage %>
      <div class="form-group form-inline">
        <%= f.label :year_built, class: "col-md-2 control-label" %>
        <div class="col-md-1">
          <%= f.number_field :year_built, class: "form-control", style: "width: 70px" %>
        </div>
        <%= f.label :bedrooms, class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.number_field :bedrooms, class: "form-control", style: "width: 70px" %>
        </div>
        <%= f.label :bathrooms, class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.text_field :bathrooms, class: "form-control", style: "width: 70px" %>
        </div>
        <%= f.label :floors, class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.number_field :floors, class: "form-control", style: "width: 70px" %>
        </div>
        <%= f.label "Sqft", class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.number_field :square_footage, class: "form-control", style: "width: 70px" %>
        </div>
      </div>

      <%# price, parking, lot_size %>
      <div class="form-group">
        <%= f.label :price, class: "col-md-2 control-label" %>
        <div class="col-md-2">
          <%= f.number_field :price, class: "form-control", style: "width: 150px" %>
        </div>
        <%= f.label :parking, class: "col-md-1 control-label" %>
        <div class="col-md-1">
          <%= f.text_field :parking, class: "form-control", style: "width: 150px" %>
        </div>
        <div class="form-group">
          <%= f.label :lot_size, class: "col-md-2 control-label" %>
          <div class="col-md-2">
            <%= f.text_field :lot_size, class: "form-control", style: "width: 200px" %>
          </div>
      </div>

      <%# hoa, hoa_fee, and floors %>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
          <div class="checkbox">
            <label>
              <%= f.check_box :hoa %>
              This home has an HOA
            </label>
          </div>
        </div>
        <%= f.label :hoa_fee, class: "col-md-2 control-label" %>
        <div class="col-md-1">
          <%= f.number_field :hoa_fee, class: "form-control", style: "width: 70px" %>
        </div>
      </div>

      <%# description %>
      <div class="form-group">
        <%= f.label :description, class: "col-md-2 control-label" %>
        <div class="col-md-1">
          <%= f.text_area :description, class: "form-control", style: "width: 700px" %>
        </div>
      </div>
    </div>
  </div>
<% end -%>
