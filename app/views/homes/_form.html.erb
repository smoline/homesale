<%= form_for(@home, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @home.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h4>

      <ul>
      <% @home.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# address %>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>


  <%# city %>
  <div class="form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>


  <%# state %>
  <div class="form-group">
    <%= f.label :state, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>


  <%# zip %>
  <div class="form-group">
    <%= f.label :zip, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :zip, class: "form-control" %>
    </div>
  </div>


  <%# year_built %>
  <div class="form-group">
    <%= f.label :year_built, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :year_built, class: "form-control" %>
    </div>
  </div>


  <%# bedrooms %>
  <div class="form-group">
    <%= f.label :bedrooms, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :bedrooms, class: "form-control" %>
    </div>
  </div>


  <%# bathrooms %>
  <div class="form-group">
    <%= f.label :bathrooms, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :bathrooms, class: "form-control" %>
    </div>
  </div>


  <%# square_footage %>
  <div class="form-group">
    <%= f.label :square_footage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :square_footage, class: "form-control" %>
    </div>
  </div>


  <%# price %>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>


  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>


  <%# parking %>
  <div class="form-group">
    <%= f.label :parking, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :parking, class: "form-control" %>
    </div>
  </div>


  <%# lot_size %>
  <div class="form-group">
    <%= f.label :lot_size, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :lot_size, class: "form-control" %>
    </div>
  </div>


  <%# hoa %>
  <div class="form-group">

    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :hoa %>
          Hoa
        </label>
      </div>
    </div>
  </div>


  <%# hoa_fee %>
  <div class="form-group">
    <%= f.label :hoa_fee, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :hoa_fee, class: "form-control" %>
    </div>
  </div>


  <%# floors %>
  <div class="form-group">
    <%= f.label :floors, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :floors, class: "form-control" %>
    </div>
  </div>


  <%# created_by %>
  <div class="form-group">
    <%= f.label :created_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :created_by, class: "form-control" %>
    </div>
  </div>


  <%# image %>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%# This is where our upload button goes! %>
      <%= f.hidden_field :image, value: @home.cached_image_data %>
      <%= f.file_field :image %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
