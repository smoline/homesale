<div class="container page-header">
  <%= link_to new_home_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Home
  <% end %>
  <h1 Listing>Homes for Sale</h1>
</div>

<div class="container-fluid">
  <ul class="s-ul">
    <%- @homes.each do |home| %>
    <li class="box">
      <%= image_tag(home.image_url(:medium), class:'mainimage') %>
      <div class="textline">
        <p class="firstleftline">$<%= home.price %></p>
        <p><%= home.city %>, <%= home.state %>  <%= home.zip %></p>
      </div>
      <div class="textline">
        <p class="secondleftline"><%= home.square_footage %> SqFeet</p>
        <p><%= home.bedrooms %> Bedrooms, <%= home.bathrooms %> Bathrooms</p>
      </div>
      <div>
        <%= link_to home, class: 'btn btn-primary' do %>
          See More
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Year built</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        <th>Square footage</th>
        <th>Roof Type</th>
        <th>Price</th>
        <th>Description</th>
        <th>Parking</th>
        <th>Lot size</th>
        <th>Hoa</th>
        <th>Hoa fee</th>
        <th>Floors</th>
        <th>Created by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.city %></td>
        <td><%= home.state %></td>
        <td><%= home.zip %></td>
        <td><%= home.year_built %></td>
        <td><%= home.bedrooms %></td>
        <td><%= home.bathrooms %></td>
        <td><%= home.square_footage %></td>
        <td><%= home.roof_type %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <td><%= home.parking %></td>
        <td><%= home.lot_size %></td>
        <td><%= home.hoa %></td>
        <td><%= home.hoa_fee %></td>
        <td><%= home.floors %></td>
        <td><%= home.created_by %></td>
        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container text-center">
  <%= paginate @homes do %>
    <nav>
      <ul class="pagination pagination-lg">
        <%= first_page_tag unless current_page.first? %>
        <%= prev_page_tag unless current_page.first? %>
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <%= page_tag page %>
          <% end %>
        <% end %>
        <%= next_page_tag unless current_page.last? %>
        <%= last_page_tag unless current_page.last? %>
      </ul>
    </nav>
  <% end %>
  <%= page_entries_info @homes %>
</div>
